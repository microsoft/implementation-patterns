{
	"$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
	"contentVersion": "1.0.0.0",
	"parameters": {
		"applicationId": {
			"type": "string",
			"defaultValue": "",
			"metadata": {
				"comments": "Application ID in ServiceNow",
				"required": false
			}
		},
		"productId": {
			"type": "string",
			"defaultValue": "",
			"metadata": {
				"comments": "Application PR in ServiceNow",
				"required": false
			}
		},
		"productLine": {
			"type": "string",
			"defaultValue": "",
			"metadata": {
				"comments": "Application PL in ServiceNow",
				"required": false
			}
		},
		"employeeId": {
			"type": "string",
			"defaultValue": "",
			"metadata": {
				"comments": "Employee ID",
				"required": false
			}
		},
		"businessUnit": {
			"type": "string",
			"defaultValue": "wi",
			"metadata": {
				"comments": "Business Unit. Examples: 'wi', 'ecc', 'gs'",
				"required": false
			}
		},
		"environment": {
			"type": "string",
			"defaultValue": "dev",
			"metadata": {
				"comments": "Deployment Environment",
				"required": false
			}
		},
		"organization": {
			"type": "string",
			"defaultValue": "WIM",
			"metadata": {
				"comments": "Organization",
				"required": false
			}
		},
		"timestamp": {
			"type": "string",
			"defaultValue": "[utcNow('u')]"
		},

		"location": {
			"type": "string",
			"defaultValue": "[resourceGroup().location]",
			"metadata": {
				"description": "Azure region"
			}
		},
		"vnetName": {
			"type": "string",
			"defaultValue": ""
		},
		"vnetPrefix": {
			"type": "string",
			"defaultValue": ""
		},
		"subnetPrefixFirewall": {
			"type": "string",
			"defaultValue": "",
			"metadata": {
				"displayName": "Subnet prefix for the Azure Firewall Subnet",
				"description": "Subnet prefix for the Azure Firewall Subnet. If not specified, the Azure Firewall Subnet will not be deployed in this VNet."
			}
		},
		"enableDdosProtection": {
			"type": "bool",
			"defaultValue": false
		},
		"enableVmProtection": {
			"type": "bool",
			"defaultValue": false
		}
	},
	"variables": {
		"subnetNameFirewall": "AzureFirewallSubnet",
		"resourceTags": {
			"ApplicationId": "[toLower(parameters('applicationId'))]",
			"ProductId": "[toLower(parameters('productId'))]",
			"ProductLine": "[toLower(parameters('productLine'))]",
			"CreatedBy": "[toLower(parameters('employeeId'))]",
			"BusinessUnit": "[parameters('businessUnit')]",
			"Environment": "[toLower(parameters('environment'))]",
			"Organization": "[parameters('organization')]",
			"Timestamp": "[parameters('timestamp')]"
		},
		"apiVersionVnet": "2020-07-01"
	},
	"resources": [
		{
			"type": "Microsoft.Network/virtualNetworks",
			"apiVersion": "[variables('apiVersionVnet')]",
			"name": "[parameters('vnetName')]",
			"location": "[parameters('location')]",
			"tags": "[variables('resourceTags')]",
			"properties": {
				"addressSpace": {
					"addressPrefixes": [
						"[parameters('vnetPrefix')]"
					]
				},
				"dhcpOptions": {
					"dnsServers": []
				},
				"enableDdosProtection": "[parameters('enableDdosProtection')]",
				"enableVmProtection": "[parameters('enableVmProtection')]"
			}
		},
		{
			"condition": "[not(empty(parameters('subnetPrefixFirewall')))]",
			"type": "Microsoft.Network/virtualNetworks/subnets",
			"apiVersion": "[variables('apiVersionVnet')]",
			"name": "[concat(parameters('vnetName'), '/', variables('subnetNameFirewall'))]",
            "dependsOn": [
                "[resourceId('Microsoft.Network/virtualNetworks', parameters('vnetName'))]"
            ],
			"properties": {
				"addressPrefix": "[parameters('subnetPrefixFirewall')]",
				"privateEndpointNetworkPolicies": "Enabled",
				"privateLinkServiceNetworkPolicies": "Enabled"
			}
		}
	]
}