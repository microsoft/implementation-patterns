{
    "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "appName": {
            "type": "String"
        },
        "planName": {
            "type": "String"
        },
        "location": {
            "defaultValue": "[resourceGroup().location]",
            "type": "String"
        },
        "storageAccountName": {
            "type": "String"
        },
        "applicationId": {
            "type": "String"
        },
        "employeeId": {
            "type": "String"
        },
        "organization": {
            "type": "String"
        },
        "environment": {
            "type": "String"
        },
        "timestamp": {
            "type": "String",
            "defaultValue": "[utcNow('u')]"
        }
    },
     "variables": {
        "resourceTags": {
            "ApplicationId": "[parameters('applicationId')]",
            "CreatedBy": "[parameters('employeeId')]",
            "Organization": "[parameters('organization')]",
            "Environment": "[parameters('environment')]",
            "Timestamp": "[parameters('timestamp')]"
        }
    },
    "resources": [
        {
            "type": "Microsoft.Web/sites",
            "apiVersion": "2018-11-01",
            "name": "[parameters('appName')]",
            "tags": "[variables('resourceTags')]",
            "location": "[parameters('location')]",
            "kind": "functionapp",
            "properties": {
                "serverFarmId": "[resourceId('Microsoft.Web/serverfarms', parameters('planName'))]",
                "scmIpSecurityRestrictionsUseMain": true,
                "ftpsState": "Disabled",
                "siteConfig": {
                    "appSettings": [
                        {
                            "name": "AzureWebJobsStorage",
                            "value": "[concat('DefaultEndpointsProtocol=https;AccountName=', parameters('storageAccountName'), ';AccountKey=', listKeys(resourceId('Microsoft.Storage/storageAccounts', parameters('storageAccountName')), '2019-06-01').keys[0].value)]"
                        },
                        {
                            "name": "WEBSITE_CONTENTAZUREFILECONNECTIONSTRING",
                            "value": "[concat('DefaultEndpointsProtocol=https;AccountName=', parameters('storageAccountName'), ';AccountKey=', listKeys(resourceId('Microsoft.Storage/storageAccounts', parameters('storageAccountName')), '2019-06-01').keys[0].value)]"
                        },
                        {
                            "name": "WEBSITE_CONTENTSHARE",
                            "value": "[concat(parameters('appName'), uniqueString(resourceGroup().id, deployment().name))]"
                        },
                        {
                            "name": "FUNCTIONS_WORKER_RUNTIME",
                            "value": "node"
                        },
                        {
                            "name": "WEBSITE_NODE_DEFAULT_VERSION",
                            "value": "~12"
                        },
                        {
                            "name": "FUNCTIONS_EXTENSION_VERSION",
                            "value": "~3"
                        }
                    ]
                }
            }
        }
    ]
}