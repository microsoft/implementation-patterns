{
    "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "location": {
            "type": "string",
            "defaultValue": "[resourceGroup().location]",
            "metadata": {
                "description": "Azure region"
            }
        },
        "firewallName": {
            "type": "string",
            "defaultValue": "firewall",
            "metadata": {
                "description": "firewallName"
            }
        },
        "firewallPipName": {
            "type": "string",
            "defaultValue": "firewall-pip",
            "metadata": {
                "description": "firewallPipName"
            }
        },
        "vnetName": {
            "defaultValue": "[resourceGroup().location]",
            "type": "String"
        },
        "subnetName": {
            "defaultValue": "[resourceGroup().location]",
            "type": "String"
        },
        "networkResourceGroup": {
            "type": "String"
        }
    },
    "variables": {},
    "resources": [
        {
            "type": "Microsoft.Network/publicIPAddresses",
            "apiVersion": "2020-05-01",
            "name": "[parameters('firewallPipName')]",
            "location": "[parameters('location')]",
            "sku": {
                "name": "Standard"
            },
            "properties": {
                "publicIPAddressVersion": "IPv4",
                "publicIPAllocationMethod": "Static",
                "idleTimeoutInMinutes": 4,
                "ipTags": []
            }
        },
        {
            "type": "Microsoft.Network/azureFirewalls",
            "apiVersion": "2020-04-01",
            "name": "[parameters('firewallName')]",
            "dependsOn": [
                "[resourceId('Microsoft.Network/publicIPAddresses', parameters('firewallPipName'))]"
            ],
            "location": "[parameters('location')]",
            "properties": {
                "sku": {
                    "name": "AZFW_VNet",
                    "tier": "Standard"
                },
                "threatIntelMode": "Alert",
                "additionalProperties": {},
                "ipConfigurations": [
                    {
                        "name": "Firewalle2",
                        "properties": {
                            "publicIPAddress": {
                                "id": "[resourceId('Microsoft.Network/publicIPAddresses', parameters('firewallPipName'))]"
                            },
                            "subnet": {
                                "id": "[concat(resourceId(parameters('networkResourceGroup'), 'Microsoft.Network/virtualNetworks', parameters('vnetName')), '/subnets/', parameters('subnetName') )]"
                            }
                        }
                    }
                ],
                "networkRuleCollections": [],
                "applicationRuleCollections": [
                    {
                        "name": "Monitor",
                        "properties": {
                            "priority": 100,
                            "action": {
                                "type": "Allow"
                            },
                            "rules": [
                                {
                                    "name": "Monitor",
                                    "protocols": [
                                        {
                                            "protocolType": "Https",
                                            "port": 443
                                        }
                                    ],
                                    "fqdnTags": [],
                                    "targetFqdns": [
                                        "rt.services.visualstudio.com",
                                        "dc.services.visualstudio.com"
                                    ],
                                    "sourceAddresses": [
                                        "*"
                                    ],
                                    "sourceIpGroups": []
                                }
                            ]
                        }
                    }
                ],
                "natRuleCollections": []
            }
        }
    ]
}